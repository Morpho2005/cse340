<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>

<form action="/inv/update" id="updateForm" method="post">
    <fieldset>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
        <label>Make: <input type="text" name="inv_make" value="<%= locals.inv_make %>" required></label>
        <label>Model: <input type="text" name="inv_model" value="<%= locals.inv_model %>" required></label>
        <label>Year: <input type="number" min="1900" max="2099" step="1" name="inv_year" value="<%= locals.inv_year %>" required></label>
        <label>Description: <textarea name="inv_description" rows="5" required><%= locals.inv_description %></textarea></label>
        <label>Image: <input type="text" name="inv_image" value="<%= locals.inv_image %>"></label>
        <label>Thumbnail: <input type="text" name="inv_thumbnail" value="<%= locals.inv_thumbnail %>"></label>
        <label>Price: <input type="number" min="1" max="999999999" name="inv_price" value="<%- locals.inv_price %>" required></label>
        <label>Miles: <input type="number" min="0" name="inv_miles" value="<%= locals.inv_miles %>" required></label>
        <label>Color: <input type="text" name="inv_color" value="<%= locals.inv_color %>" required></label>
        <label>Classification: <%- classlist %></label>
        <input type="submit" id="submit" name="submit" value="Update Vehicle" disabled>
    </fieldset>
</form>

<script src="/js/inv-update.js"></script>